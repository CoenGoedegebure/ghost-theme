<div class="floating-header">
    <div class="floating-header-logo">
        <a href="{{@blog.url}}">
            {{#if @blog.icon}}
                <img src="{{@blog.icon}}" alt="{{@blog.title}} icon" />
            {{/if}}
            <span>{{@blog.title}}</span>
        </a>
    </div>
    <span class="floating-header-divider">&mdash;</span>
    <div class="floating-header-title">{{title}}</div>
    <div class="floating-header-share">
        <div class="floating-header-share-label">Share this </div><div class="fa fa-hand-o-right"></div>&nbsp;
        <a class="floating-header-share-tw fa fa-twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'share-twitter', 'width=550,height=235');return false;">
        </a>
		<a class="floating-header-share-li fa fa-linkedin" href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'share-linkedin', 'width=550,height=235');return false;">
        </a>
        <a class="floating-header-share-fb fa fa-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
            onclick="window.open(this.href, 'share-facebook','width=580,height=296');return false;">
        </a>
		<a class="floating-header-share-gp fa fa-google-plus" href="https://plus.google.com/share?url={{url absolute='true'}}"
            onclick="window.open(this.href, 'share-googleplus', 'width=550,height=235');return false;">
        </a>

    </div>
    <progress id="reading-progress" class="progress" value="0">
        <div class="progress-container">
            <span class="progress-bar"></span>
        </div>
    </progress>
</div>
